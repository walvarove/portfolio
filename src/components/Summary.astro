---
import ReusableSection from "./ReusableSection.astro";
import { getEntry } from "astro:content";

const summary = await getEntry("sections", "summary");
if (!summary) throw new Error("Summary not found");

const { Content } = await summary.render();
---

<ReusableSection key="summary">
    <div class="prose-sm prose-invert max-w-none text-foreground/60 leading-relaxed font-sans [&>p]:mb-3 [&>p:last-child]:mb-0">
        <Content />
    </div>
</ReusableSection>
