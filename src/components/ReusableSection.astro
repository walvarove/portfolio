---
interface Props {
    key?: string;
    keyComment?: string;
}

const { key, keyComment } = Astro.props;
---

<section class="lg:py-10 px-4 py-4">
    <div class="max-w-screen-md mx-auto w-full">
        {
            key ? (
                <div class="flex items-center gap-3 mb-6">
                    <code class="text-xs font-mono text-muted-foreground">
                        <span class="text-cyan-400/50">import</span>{" "}
                        <span class="text-cyan-400">"{key}"</span>
                        {keyComment ? (
                            <span class="text-muted-foreground/40">
                                {" "}
                                // {keyComment}
                            </span>
                        ) : null}
                    </code>
                    <div class="flex-1 h-px bg-border" />
                </div>
            ) : null
        }
        <div class="text-foreground/80 text-sm font-mono grid gap-4">
            <slot />
        </div>
    </div>
</section>
