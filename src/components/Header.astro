---
import { Github, Linkedin, Mail, MapPin, FileDown } from "lucide-react";
---

<header class="px-4 pt-8 lg:pt-16 pb-10">
    <section class="mx-auto max-w-screen-md">
        <div class="flex flex-col gap-6">
            <!-- Name & tagline -->
            <div>
                <h1
                    class="text-4xl sm:text-5xl font-bold tracking-tight text-foreground leading-none mt-3"
                >
                    Álvaro Pedro Ponce
                </h1>
                <p class="mt-3 text-sm font-mono text-muted-foreground">
                    <span class="text-cyan-400">[</span>
                    <span class="text-foreground/60">"Software Engineer"</span>,
                    <span class="text-foreground/60">"Musician"</span>,
                    <span class="text-foreground/60">"Powerlifter"</span>
                    <span class="text-cyan-400">]</span>
                </p>
            </div>

            <!-- Divider -->
            <div
                class="h-px bg-gradient-to-r from-cyan-400/30 via-border to-transparent"
            >
            </div>

            <!-- Links row -->
            <div class="flex items-center justify-between flex-wrap gap-4">
                <div
                    class="flex items-center gap-1 text-muted-foreground text-xs font-mono"
                >
                    <MapPin size={12} className="text-cyan-400" />
                    <span>Valencia, Spain</span>
                </div>
                <div class="flex gap-1 flex-wrap">
                    <a
                        href="mailto:alvaroponce@gmail.com"
                        target="_blank"
                        class="group flex items-center gap-1.5 px-3 py-1.5 rounded-md text-xs font-mono text-muted-foreground border border-border hover:border-cyan-400/50 hover:text-cyan-400 hover:bg-cyan-400/5 transition-all duration-200"
                        aria-label="Email"
                    >
                        <Mail size={13} />
                        <span>email</span>
                    </a>
                    <a
                        href="https://github.com/walvarove"
                        target="_blank"
                        class="group flex items-center gap-1.5 px-3 py-1.5 rounded-md text-xs font-mono text-muted-foreground border border-border hover:border-cyan-400/50 hover:text-cyan-400 hover:bg-cyan-400/5 transition-all duration-200"
                        aria-label="GitHub"
                    >
                        <Github size={13} />
                        <span>github</span>
                    </a>
                    <a
                        href="https://www.linkedin.com/in/alvaropedroponce"
                        target="_blank"
                        class="group flex items-center gap-1.5 px-3 py-1.5 rounded-md text-xs font-mono text-muted-foreground border border-border hover:border-cyan-400/50 hover:text-cyan-400 hover:bg-cyan-400/5 transition-all duration-200"
                        aria-label="LinkedIn"
                    >
                        <Linkedin size={13} />
                        <span>linkedin</span>
                    </a>
                    {import.meta.env.DEV && (
                        <a
                            href="/resume.pdf"
                            download="ÁlvaroPedro_Resume.pdf"
                            class="group flex items-center gap-1.5 px-3 py-1.5 rounded-md text-xs font-mono text-muted-foreground border border-border hover:border-cyan-400/50 hover:text-cyan-400 hover:bg-cyan-400/5 transition-all duration-200"
                            aria-label="Download resume"
                        >
                            <FileDown size={13} />
                            <span>resume</span>
                        </a>
                    )}
                </div>
            </div>
        </div>
    </section>
</header>
